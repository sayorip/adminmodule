    <script>
   $.getJSON('/getGraph', function (data) {

   var date = [];
   var number_coup = [];
                
    $.each(data, function(key, value) {
        var indv_date = key;  
        date.push(indv_date);

        var indv_number = value;
        number_coup.push(indv_number);

               
    });
    // alert (date);
    // alert (number_coup);


                 Highcharts.chart('container', {
    chart: {
        type: 'line'
    },
    title: {
        text: 'Coupons Sold Per Day'
    },
    subtitle: {
        text: 'Api: /getGraph '
    },
    xAxis: {
        categories: date
    },
    yAxis: {
        title: {
            text: 'Number of Coupons'
        }
    },
    plotOptions: {
        line: {
            dataLabels: {
                enabled: true
            },
            enableMouseTracking: false
        }
    },
    series: [{
        name: 'Dates',
        data: number_coup
    }]

});                       

});
        
